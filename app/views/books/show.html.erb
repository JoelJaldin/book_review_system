<div class="container mx-auto px-4 py-8">
  <div class="max-w-5xl mx-auto">
    <!-- Botón Volver -->
    <%= link_to books_path, class: "inline-flex items-center space-x-2 text-gray-600 hover:text-purple-500 transition-all mb-6 group" do %>
      <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span class="font-medium">Volver al catálogo</span>
    <% end %>

    <!-- Información del libro -->
    <div class="glass-card rounded-2xl shadow-xl p-8 mb-8 card-modern">
      <div class="flex items-start justify-between mb-6">
        <div class="flex-1">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-500 to-blue-600 bg-clip-text text-transparent mb-3">
            <%= @book.title %>
          </h1>
          <p class="text-xl text-gray-600 flex items-center mb-6">
            <svg class="w-6 h-6 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            por <%= @book.author %>
          </p>
          
          <div class="flex flex-wrap gap-6 mb-6">
            <div class="flex items-center space-x-3 bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl px-4 py-3">
              <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-lg flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <div>
                <span class="text-xs font-medium text-gray-600 block">Calificación Promedio</span>
                <span class="text-2xl font-bold bg-gradient-to-r from-purple-500 to-blue-600 bg-clip-text text-transparent">
                  <%= @book.average_rating %>
                </span>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 bg-gradient-to-r from-purple-50 to-blue-50 rounded-xl px-4 py-3">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-300 to-blue-500 rounded-lg flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                </svg>
              </div>
              <div>
                <span class="text-xs font-medium text-gray-600 block">Total de Reseñas</span>
                <span class="text-2xl font-bold text-gray-800">
                  <%= @book.reviews.count %>
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex flex-col space-y-2 ml-6">
          <%= link_to edit_book_path(@book), class: "flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-lg hover:shadow-lg hover:scale-105 transition-all font-medium" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span>Editar</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Formulario para nueva reseña -->
    <div class="glass-card rounded-2xl shadow-xl p-8 mb-8">
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-purple-400 rounded-lg flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold bg-gradient-to-r from-purple-500 to-blue-600 bg-clip-text text-transparent">
          Escribir una Reseña
        </h2>
      </div>
      
      <%= form_with model: [@book, @review], local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :reviewer_name, "Tu nombre", class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center" do %>
            <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Tu nombre
          <% end %>
          <%= form.text_field :reviewer_name, 
              placeholder: "Ingresa tu nombre",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all",
              required: true %>
        </div>
        
        <div>
          <%= form.label :rating, "Calificación", class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center" do %>
            <svg class="w-4 h-4 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Calificación (1-5 estrellas)
          <% end %>
          <%= form.select :rating, options_for_select([
            ['1 estrella', 1],
            ['2 estrellas', 2],
            ['3 estrellas', 3],
            ['4 estrellas', 4],
            ['5 estrellas', 5]
          ]), { prompt: "Selecciona una calificación" }, 
          { class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all", required: true } %>
        </div>
        
        <div>
          <%= form.label :content, "Comentario", class: "block text-sm font-semibold text-gray-700 mb-2 flex items-center" do %>
            <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Comentario
          <% end %>
          <%= form.text_area :content, 
              placeholder: "Escribe tu reseña aquí (máximo 1000 caracteres)...",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all resize-none",
              rows: 5,
              required: true %>
        </div>
        
        <%= form.submit "Publicar Reseña", 
            class: "w-full bg-gradient-to-r from-purple-400 to-blue-600 text-white px-6 py-4 rounded-xl hover:shadow-xl hover:scale-[1.02] transition-all font-bold text-lg" %>
      <% end %>
    </div>

    <!-- Lista de reviews -->
    <div class="glass-card rounded-2xl shadow-xl p-8">
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-lg flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold bg-gradient-to-r from-purple-500 to-blue-600 bg-clip-text text-transparent">
          Reseñas (<%= @reviews.count %>)
        </h2>
      </div>
      
      <% if @reviews.any? %>
        <div class="space-y-4">
          <% @reviews.each do |review| %>
            <div class="review-card <%= review.user.banned? ? 'opacity-60' : '' %> bg-white rounded-xl p-6 border-2 <%= review.user.banned? ? 'border-gray-300' : 'border-purple-100' %>">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <div class="w-10 h-10 <%= review.user.banned? ? 'bg-gray-400' : 'bg-gradient-to-br from-purple-300 to-blue-500' %> rounded-full flex items-center justify-center text-white font-bold shadow-lg">
                      <%= review.reviewer_name.first.upcase %>
                    </div>
                    <div class="flex-1">
                      <div class="flex items-center space-x-2 mb-1">
                        <span class="font-bold <%= review.user.banned? ? 'text-gray-500' : 'text-gray-900' %>">
                          <%= review.reviewer_name %>
                        </span>
                        <% if review.user.banned? %>
                          <span class="text-xs bg-gray-200 text-gray-600 px-2 py-1 rounded-full font-semibold">Baneado</span>
                        <% end %>
                      </div>
                      <div class="flex items-center space-x-2">
                        <% review.rating.times do %>
                          <svg class="w-4 h-4 text-yellow-400 star-rating" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                        <% (5 - review.rating).times do %>
                          <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-xs text-gray-500 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <%= review.created_at.strftime("%d/%m/%Y") %>
                  </span>
                </div>
              </div>
              
              <p class="<%= review.user.banned? ? 'text-gray-500' : 'text-gray-700' %> mb-4 leading-relaxed">
                <%= review.content %>
              </p>
              
              <div class="flex items-center space-x-2 pt-3 border-t border-gray-100">
                <%= button_to book_review_path(@book, review), 
                    method: :delete,
                    confirm: "¿Estás seguro de que quieres eliminar esta reseña?",
                    form: { style: "display: inline;" },
                    class: "p-2 rounded-lg bg-red-50 text-red-500 hover:bg-red-100 hover:text-red-600 transition-all",
                    title: "Eliminar reseña" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
                
                <% if review.user.banned? %>
                  <%= button_to unban_user_path(review.user), 
                      method: :patch,
                      confirm: "¿Estás seguro de que quieres desbanear a este usuario? Sus reseñas contarán nuevamente para el promedio.",
                      form: { style: "display: inline;" },
                      class: "p-2 rounded-lg bg-green-50 text-green-500 hover:bg-green-100 hover:text-green-600 transition-all",
                      title: "Desbanear usuario" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  <% end %>
                <% else %>
                  <%= button_to ban_user_path(review.user), 
                      method: :patch,
                      confirm: "¿Estás seguro de que quieres banear a este usuario? Sus reseñas no contarán para el promedio.",
                      form: { style: "display: inline;" },
                      class: "p-2 rounded-lg bg-orange-50 text-orange-500 hover:bg-orange-100 hover:text-orange-600 transition-all",
                      title: "Banear usuario" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-20 h-20 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">No hay reseñas aún</h3>
          <p class="text-gray-600">Sé el primero en compartir tu opinión sobre este libro</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
